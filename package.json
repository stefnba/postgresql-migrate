{
    "name": "postgresql-migrate",
    "version": "2.0.3",
    "description": "Simple CLI migration tool for PostgreSQL and Node.js with migration files written in raw SQL. TypeScript types files for all tables and columns in the database are automatically created.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "clean": "rm -rf lib",
        "build": "npm run clean && tsc && npm run copy",
        "copy": "copyfiles -u 1 \"src/db/sql/*.sql\" \"lib\"",
        "prepack": "npm run build",
        "test": "mocha",
        "format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "migrate": "ts-node src/index.ts -d /tests/app/db/migration"
    },
    "bin": "lib/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/stefnba/postgresql-migrate.git"
    },
    "keywords": [
        "pg",
        "postgresql",
        "migration",
        "node",
        "database"
    ],
    "author": "Stefan Bauer",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.8.2",
        "@types/yargs": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "chai": "^4.3.6",
        "copyfiles": "^2.4.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^10.1.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "files": [
        "lib",
        "templates"
    ],
    "dependencies": {
        "chalk": "^4.1.2",
        "dayjs": "^1.11.5",
        "dotenv": "^16.0.3",
        "pg-promise": "^10.12.0",
        "yargs": "^17.6.0"
    }
}
